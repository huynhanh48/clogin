@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng Xuất";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark btn btn-danger">Bấm Vào Đây Để Đăng Xuất</button>
            </form>
        }
        else
        {
            <p style="font-size: 40px" class="alert alert-success">success</p>
        }
    }
</header>
